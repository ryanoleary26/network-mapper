{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "spellcheck"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-trailing-spaces" : [
            "error"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "camelcase": [
            "error"
        ],
        "spellcheck/spell-checker": [
            "warn",
            {
                "skipWordIfMatch": [
                    "^n|Nmap$",
                    "^d|Dryrun$",
                    "^t|Traceroute$",
                    "^i|Ipv6$",
                    "^b|Badsum$",
                    "^hostnames$"
                ],
                "minLength": 4
            }
        ],
        "@typescript-eslint/no-empty-interface": [
            "error",
            {
              "allowSingleExtends": false
            }
          ]
    }
}
